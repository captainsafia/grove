{
  "name": "@captainsafia/grove",
  "version": "1.0.0",
  "description": "A CLI tool for managing Git worktrees with TypeScript",
  "keywords": [
    "git",
    "worktree",
    "cli",
    "typescript",
    "bun"
  ],
  "homepage": "https://github.com/captainsafia/grove",
  "bugs": {
    "url": "https://github.com/captainsafia/grove/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/captainsafia/grove.git"
  },
  "license": "MIT",
  "author": "Safia Abdalla",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "grove": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "build:compile": "bun build --compile --minify --sourcemap ./src/index.ts --outfile grove",
    "build:linux-x64": "bun build --compile --minify --sourcemap --target=bun-linux-x64 ./src/index.ts --outfile grove-linux-x64",
    "build:linux-arm64": "bun build --compile --minify --sourcemap --target=bun-linux-arm64 ./src/index.ts --outfile grove-linux-arm64",
    "build:darwin-x64": "bun build --compile --minify --sourcemap --target=bun-darwin-x64 ./src/index.ts --outfile grove-darwin-x64",
    "build:darwin-arm64": "bun build --compile --minify --sourcemap --target=bun-darwin-arm64 ./src/index.ts --outfile grove-darwin-arm64",
    "dev": "bun run src/index.ts",
    "clean": "rm -rf dist grove grove-*",
    "test": "bun test test/WorktreeManager.test.ts test/WorktreeManager.edge-cases.test.ts && bun test test/utils.test.ts test/cli.test.ts test/WorktreeManager.integration.test.ts",
    "test:unit": "bun test test/WorktreeManager.test.ts test/WorktreeManager.edge-cases.test.ts test/utils.test.ts test/cli.test.ts",
    "test:integration": "bun test test/WorktreeManager.integration.test.ts",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "bun x tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "inquirer": "^9.0.0",
    "moment": "^2.30.1",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
